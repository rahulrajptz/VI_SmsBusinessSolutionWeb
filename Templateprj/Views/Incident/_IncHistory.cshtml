@model Templateprj.Models.ProjectViewModel
@{
    System.Data.DataTable project = ViewBag.Datas;
}
<div class="row">    
        <div class="card animated bounceInUp">
            <div class="card-body">
                @if (project != null && project.Rows.Count != 0)
                {
                    <div id="div_Report" class="dataTables_wrapper container-fluid dt-bootstrap4">
                       
                            <table id="resolvedm" class="table table-striped table-bordered dataTable dtr-inline" cellspacing="0" width="100%" role="grid" aria-describedby="datatable_info" style="width: 100%;">
                                <thead>
                                    <tr>
                                        @foreach (System.Data.DataColumn column in project.Columns)
                                        {
                                            if (@column.ColumnName != "HIS_ID")
                                            {
                                                <th>@column.ColumnName</th>
                                            }
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (System.Data.DataRow row in project.Rows)
                                    {
                                        <tr>
                                            @for (int i = 0; i < ViewBag.Datas.Columns.Count; i++)
                                            {
                                                if (i > 0)
                                                {
                                                    <td>@row[i].ToString()</td>
                                                }
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>                      
                    </div>
                }
            </div>
        </div>   
</div>


