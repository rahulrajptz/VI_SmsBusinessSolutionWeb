@model Templateprj.Models.ProjectViewModel
@{
    ViewBag.ActLink = ViewBag.Title = "ProjectTrackerView";
    System.Data.DataTable project = ViewBag.Data;
}
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>@*For Jquery Ui*@
<script src="~/assets/JqueryUi/jquery-1.12.4.js"></script>
@if (Session["RoleID"].ToString() == "1" || Session["RoleID"].ToString() == "2" || Session["RoleID"].ToString() == "4")
{
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-header ">
                    <h4 class="card-title">ProjectTracker Report</h4>
                </div>
                <div class="card-body">                    
                        @using (Html.BeginForm())
                        {
                            <div class="row">
                                <div class="form-group col s2">
                                    @Html.Label("Date Range", new { })
                                    @Html.TextBoxFor(m => m.Daterange, new { @class = "form-control" })
                                </div>
                                <div class="form-group col s2">
                                    @Html.Label("Circle", new { })
                                    @Html.DropDownListFor(m => m.Circleall, Model.CircleListall, new { @class = "form-control" })
                                    @*@Html.ValidationMessageFor(m => m.IncidentId, "", new { @class = "text - danger" })*@
                                </div>
                                <div class="form-group col s2">
                                    @Html.Label("RDN", new { })
                                    @Html.TextBoxFor(m => m.RDNS, new { @class = "form-control", @onkeypress = "return ((event.charCode >= 48 && event.charCode <= 57) || event.charCode == 44 || event.which == 8)", @minLength = 10 , @maxLength = 10 })
                                </div>
                                <div class="form-group col s2">
                                    @Html.Label("TFN", new { })
                                    @Html.TextBoxFor(m => m.TFNS, new { @class = "form-control", @onkeypress = "return ((event.charCode >= 48 && event.charCode <= 57) || event.charCode == 44 || event.which == 8)", @minLength = 10, @maxLength = 11 })
                                </div>
                                <div class="form-group col s4" style="margin-top:1%;">
                                    <button type="submit" class="ion ion-ios-search-strong btn btn-primary not-close" name="search" value="search"></button>
                                    <button type="submit" class="ion ion-android-download btn btn-default not-close" name="export" value="export"></button>
                                </div>
                            </div>
                        }
                    
                </div>
            </div>
        </div>
    </div>
}
@if (project != null && project.Rows.Count != 0)
{
    <div class="row">
        <div class="col s12">
            <div class="card animated bounceInUp">
                <div class="card-body">
                    @if (project != null && project.Rows.Count != 0)
                    {
                        var idx = 0;
                        <div id="div_Report" class="dataTables_wrapper container-fluid dt-bootstrap4">
                            <div class="col-sm-12">
                                <table id="resolved" class="table table-striped table-bordered dataTable dtr-inline" cellspacing="0" width="100%" role="grid" aria-describedby="datatable_info" style="width: 100%;">
                                    <thead>
                                        <tr>
                                            @foreach (System.Data.DataColumn column in project.Columns)
                                            {
                                                if (idx == 2 && Session["RoleID"].ToString() == "1")
                                                {
                                                    <th>Edit</th>
                                                    <th>@column.ColumnName</th>
                                                }
                                                else
                                                {
                                                    if (@column.ColumnName != "ID")
                                                    {
                                                        <th>@column.ColumnName</th>
                                                    }
                                                }
                                                idx++;
                                            }
                                            <th>
                                                View History
                                            </th>
                                            <th>History</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (System.Data.DataRow row in project.Rows)
                                        {
                                            <tr>
                                                @for (int i = 0; i < ViewBag.Data.Columns.Count; i++)
                                                {
                                                    if (i > 0)
                                                    {
                                                        if (i == 2 && Session["RoleID"].ToString() == "1")
                                                        {
                                                            <td id="e1">
                                                                <a href='@Url.Action("ProjectTracker", "Incident",new {id = @row["ID"].ToString() })' class="btn btn-round btn-success btn-icon btn-md edit not-close"><i class="far fa-edit"></i></a>
                                                                @*@Html.ActionLink("Edit", "ProjectTracker", new { controller = "Incident", id = @row["ID"].ToString() }, new { @class = "btn btn-round btn-success btn-icon btn-md edit not-close" })*@
                                                            </td>
                                                            <td>@row[i].ToString()</td>
                                                        }
                                                        else
                                                        {
                                                            <td>@row[i].ToString()</td>
                                                        }
                                                    }

                                                }
                                                @*<td id="d1">@Html.ActionLink(".", "DownloadHistory", new { controller = "Incident", id = @row["ID"].ToString() }, new { @class = "btn-floating ion ion-android-download waves-effect waves-light red center not-close" })</td>*@
                                                <td>
                                                    <a onclick="modelpops(@row["PROJECT_ID"].ToString())" class="btn btn-round btn-info btn-icon btn-md edit not-close">
                                                        <i class="fas fa fa-camera-retro"></i>
                                                    </a>
                                                </td>

                                                <td id="d1"><a href='@Url.Action("DownloadHistory", "Incident",new {id = @row["ID"].ToString() })' class="btn btn-round btn-warning btn-icon btn-md edit not-close"><i class="fas fa-cloud-download-alt"></i></a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
