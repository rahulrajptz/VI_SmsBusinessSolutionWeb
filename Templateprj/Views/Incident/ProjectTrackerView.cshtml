<script>
    $(function () {       
        $("#RDNS").autocomplete({
            minLength: 3,
            source: function (request, response) {                
                $.ajax({
                    url: "Incident/RdnAutofill",
                    type: "POST",
                    dataType: "json",
                    data: { Rdn: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item };
                        }))

                    }
                })
            },
            messages: {
                noResults: "",
                results: function (count) {
                    return count + (count > 1 ? ' results' : ' result ') + ' found';
                }
            }
        });
        $("#TFNS").autocomplete({
            minLength: 3,
            source: function (request, response) {
                $.ajax({
                    url: "Incident/RdnAutofill",
                    type: "POST",
                    dataType: "json",
                    data: { tfn: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item };
                        }))

                    }
                })
            },
            messages: {
                noResults: "",
                results: function (count) {
                    return count + (count > 1 ? ' results' : ' result ') + ' found';
                }
            }
        });
    });//for auto complete
</script>
